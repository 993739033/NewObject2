<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"

    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:id="@+id/layout_chuku_record_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector"
            android:clickable="true"
            android:orientation="horizontal">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <TableRow>


                    <TextView
                        android:id="@+id/tv_siliao_1"
                        android:layout_width="100dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="购买人"
                        android:textColor="@color/black" />


                    <TextView
                        android:textColor="@color/gray_1"
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="" />

                </TableRow>


                <TableRow>


                    <TextView
                        android:id="@+id/tv_siliao_2"
                        android:layout_width="100dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="规模养殖场名称"
                        android:textColor="@color/black" />


                    <TextView
                        android:textColor="@color/gray_1"
                        android:id="@+id/tv_farm_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="" />


                </TableRow>


                <TableRow>


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="通用名称"
                        android:textColor="@color/black" />


                    <TextView
                        android:textColor="@color/gray_1"
                        android:id="@+id/tv_normal_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="" />


                </TableRow>


                <TableRow>


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="销售数量"
                        android:textColor="@color/black" />


                    <TextView
                        android:textColor="@color/gray_1"
                        android:id="@+id/tv_sale_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:text="" />


                </TableRow>


            </TableLayout>

            <CheckBox
                android:id="@+id/cuku_record_item_cb"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>