<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/layout_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:id="@+id/layout_kucun_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector"
            android:clickable="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TableRow>

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="20dp"
                            android:gravity="center_vertical"
                            android:text="通用名称"
                            android:textColor="@color/black" />


                        <TextView
                            android:id="@+id/tv_normal_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/gray_1" />


                    </TableRow>


                    <TableRow>


                        <TextView
                            android:id="@+id/tv_siliao_3"
                            android:layout_width="100dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="20dp"
                            android:gravity="center_vertical"
                            android:text="库存数量"
                            android:textColor="@color/black" />


                        <TextView
                            android:id="@+id/tv_kc_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/gray_1" />


                    </TableRow>


                    <TableRow>


                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="20dp"
                            android:gravity="center_vertical"
                            android:text="有效日期"
                            android:textColor="@color/black" />


                        <TextView
                            android:id="@+id/tv_yx_riqi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text=""
                            android:textColor="@color/gray_1" />


                    </TableRow>

                    <TableRow>


                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="20dp"
                            android:gravity="center_vertical"
                            android:text="单价（元）"
                            android:textColor="@color/black" />


                        <TextView
                            android:id="@+id/tv_dj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/gray_1" />


                    </TableRow>

                    <TableLayout
                        android:visibility="gone"
                        android:id="@+id/layout_more"
                        android:layout_width="match_parent"
                        android:layout_height="340dp"
                        android:orientation="vertical">


                        <TableRow>


                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="28dp"
                                android:layout_marginLeft="20dp"
                                android:gravity="center_vertical"
                                android:text="生产日期"
                                android:textColor="@color/black" />


                            <TextView
                                android:id="@+id/tv_sc_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/gray_1" />


                        </TableRow>


                        <TableRow>


                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="28dp"
                                android:layout_marginLeft="20dp"
                                android:gravity="center_vertical"
                                android:text="商品类型"
                                android:textColor="@color/black" />


                            <TextView
                                android:id="@+id/tv_sp_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/gray_1" />


                        </TableRow>


                        <TableRow>


                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="28dp"
                                android:layout_marginLeft="20dp"
                                android:gravity="center_vertical"
                                android:text="规格"
                                android:textColor="@color/black" />


                            <TextView
                                android:id="@+id/tv_spec"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/gray_1" />


                        </TableRow>
                        <TableRow>


                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="28dp"
                                android:layout_marginLeft="20dp"
                                android:gravity="center_vertical"
                                android:text="单位"
                                android:textColor="@color/black" />


                            <TextView
                                android:id="@+id/tv_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/gray_1" />


                        </TableRow>

                        <TableRow>


                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="28dp"
                                android:layout_marginLeft="20dp"
                                android:gravity="center_vertical"
                                android:text="库存金额"
                                android:textColor="@color/black" />


                            <TextView
                                android:id="@+id/tv_ssje"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/gray_1" />


                        </TableRow>


                        <TableRow>


                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="28dp"
                                android:layout_marginLeft="20dp"
                                android:gravity="center_vertical"
                                android:text="供应商名称"
                                android:textColor="@color/black" />


                            <TextView
                                android:id="@+id/tv_gys_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/gray_1" />


                        </TableRow>

                        <TableRow>


                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="28dp"
                                android:layout_marginLeft="20dp"
                                android:gravity="center_vertical"
                                android:text="生产企业名称"
                                android:textColor="@color/black" />


                            <TextView
                                android:id="@+id/tv_qy_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/gray_1" />


                        </TableRow>

                        <TableRow>


                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="28dp"
                                android:layout_marginLeft="20dp"
                                android:gravity="center_vertical"
                                android:text="批准文号"
                                android:textColor="@color/black" />


                            <TextView
                                android:id="@+id/tv_pz_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/gray_1" />


                        </TableRow>


                        <TableRow>


                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="28dp"
                                android:layout_marginLeft="20dp"
                                android:gravity="center_vertical"
                                android:text="生产批号"
                                android:textColor="@color/black" />


                            <TextView
                                android:id="@+id/tv_sc_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/gray_1" />


                        </TableRow>

                        <TableRow>


                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="28dp"
                                android:layout_marginLeft="20dp"
                                android:gravity="center_vertical"
                                android:text="商品名称"
                                android:textColor="@color/black" />


                            <TextView
                                android:id="@+id/tv_sp_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/gray_1" />


                        </TableRow>

                        <TableRow>


                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="100dp"
                                android:layout_height="28dp"
                                android:layout_marginLeft="20dp"
                                android:gravity="center_vertical"
                                android:text="内码"
                                android:textColor="@color/black" />


                            <TextView
                                android:id="@+id/tv_nm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/gray_1" />


                        </TableRow>

                        <TableRow>


                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="28dp"
                                android:layout_marginLeft="20dp"
                                android:gravity="center_vertical"
                                android:text="代理机构"
                                android:textColor="@color/black" />


                            <TextView
                                android:id="@+id/tv_dljg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:text=""
                                android:textColor="@color/gray_1" />


                        </TableRow>


                    </TableLayout>
                </TableLayout>

                <CheckBox
                    android:id="@+id/cb"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_show_more"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:clickable="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/down_arrow_16" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>